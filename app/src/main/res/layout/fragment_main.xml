<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#424242"
             tools:context=".view.MainFragment">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#424242" android:id="@+id/main_layout"
        >

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/box"
                    android:id="@+id/linearLayout"
                    android:scrollbarAlwaysDrawHorizontalTrack="false">
                <TextView
                        android:text="Всего игроков: -1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/allOnline_textView"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        style="@style/text" android:freezesText="true"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout" android:layout_marginTop="8dp"
                    android:background="@drawable/box"
                    android:id="@+id/box_line">
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mgOnline_rcView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/box_line"
                tools:itemCount="3" tools:listitem="@layout/online_item"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/mgOnline_rcView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/box_line"
                    android:background="@drawable/box"
                    android:id="@+id/box_line_2" android:layout_marginTop="16dp">
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Администрация онлайн"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/adminsOnline_button"
                    app:layout_constraintEnd_toEndOf="@+id/box_line_2"
                    app:layout_constraintStart_toStartOf="@+id/box_line_2"
                    app:layout_constraintTop_toBottomOf="@+id/box_line_2" android:layout_marginTop="8dp"
                    android:background="@drawable/box" style="@style/button" android:textSize="12sp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Прямые трансляции"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/streams_button"
                    app:layout_constraintEnd_toEndOf="@+id/adminsOnline_button"
                    app:layout_constraintStart_toStartOf="@+id/adminsOnline_button"
                    app:layout_constraintTop_toBottomOf="@+id/adminsOnline_button"
                    android:background="@drawable/box" style="@style/button" android:textSize="12sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Все достижения"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/allAchievements_button"
                    app:layout_constraintEnd_toEndOf="@+id/streams_button"
                    app:layout_constraintStart_toStartOf="@+id/streams_button"
                    app:layout_constraintTop_toBottomOf="@+id/streams_button"
                    android:background="@drawable/box" style="@style/button" android:textSize="12sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Слежка мод"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/spyMod_button"
                    app:layout_constraintEnd_toEndOf="@+id/allAchievements_button"
                    app:layout_constraintStart_toStartOf="@+id/allAchievements_button"
                    app:layout_constraintTop_toBottomOf="@+id/allAchievements_button"
                    android:background="@drawable/box" style="@style/button" android:textSize="12sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/spyMod_button"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout"
                    android:background="@drawable/box"
                    android:id="@+id/box_line_3"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp">
            </LinearLayout>
            <FrameLayout
                android:id="@+id/frameLayout_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:isScrollContainer="false"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="@+id/spyMod_button"
                app:layout_constraintStart_toStartOf="@+id/spyMod_button"
                app:layout_constraintTop_toBottomOf="@+id/box_line_3">

            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>